<% include header.ejs %>

  <div class="container-fluid">
  <% if(error) { %> <p class="error"><%= error %></p><%}%>
    <div class="row-fluid">
      <div class="span3">
        <div class="profile-name"></div>
        <% if(follow != null) { %>  
          <% if(follow == true) { %>
            <button class="btn btn-primary follow-btn-fix" type="button" id="unfollow">Unfollow</button>
          <% } else { %>
          	<button class="btn follow-btn-fix" type="button" id="follow">Follow</button>
          <% } %>
        <% } %>
      </div><!--/span3-->
        
      <div class="span9">  	  			
			  <% if(comments && comments.length > 0) { %>
			  <% comments.forEach(function(comment){ %>
				  <div class="target-row">
		        <div class="target-header">
		          <a href="/profile/<%= comment.username %>"><strong><%= comment.username %></strong></a> . posted . <%= comment.addedat %>
		        </div>
		        <div class="target">
		          <p> <%= comment.comment %> </p>
		        </div>
		      </div>
	      	<% }) %> <!-- for close -->
			<% } else { %> 
			   <p> No message posted yet! </p>
			<% } %> <!-- if-else close -->   
      </div><!--/span9-->
    </div><!--/row-->
  </div><!--/.fluid-container-->
  
<% include footer.ejs %>